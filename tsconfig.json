{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@containers/*": [
        "./src/containers/*"
      ],
      "@/public/*": [
        "./public/*"
      ],
      "@config/*": [
        "./config/*"
      ],
        "@components/*": [
            "./src/components/*"
        ],
        "@hooks/*": [
            "./src/hooks/*"
        ],
        "@store/*": [
            "./src/store/*"
        ],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "module": "esnext",
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
